{
  "name": "@sumup/intl",
  "version": "1.5.0",
  "description": "Format numbers, currency values, dates, and times for any locale with the ECMAScript Internationalization API",
  "repository": "git@github.com:sumup-oss/intl-js.git",
  "author": "Connor BÃ¤r <connor.baer@sumup.com>",
  "license": "Apache-2.0",
  "private": false,
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsc --watch",
    "dev": "npm run start",
    "build": "npm run build:es && npm run build:cjs",
    "build:es": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "docs": "typedoc",
    "lint": "foundry run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --watch",
    "test:ci": "jest --ci --runInBand --coverage --reporters default --reporters \"github-actions\"",
    "check:security": "audit-ci --critical",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "prerelease": "npm run build",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "intl-format-cache": "^4.2.27"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@sumup/foundry": "^6.0.0",
    "@types/jest": "^29.1.2",
    "audit-ci": "^6.1.0",
    "jest": "^29.1.2",
    "jest-extended": "^4.0.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.24.6",
    "typedoc-github-wiki-theme": "^1.0.1",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^5.0.2"
  }
}
